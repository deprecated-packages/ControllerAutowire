{
    "name": "symplify/controller-autowire",
    "description": "Adds support to autowire controller constructor without pain.",
    "keywords": ["Symfony", "controller", "autowire"],
    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/robot-loader": "^2.3",
        "symfony/config": "^2.8|^3.0",
        "symfony/dependency-injection": "^2.8|^3.0",
        "symfony/http-kernel": "^2.8|^3.0",
        "symfony/yaml": "^2.8|^3.0"
    },
    "require-dev": {
        "nette/utils": "^2.3",
        "symfony/framework-bundle": "^2.8|^3.0",
        "symplify/coding-standard": "^0.1",
        "phpunit/phpunit": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ControllerAutowire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ControllerAutowire\\Tests\\": "tests"
        }
    }
}
