{
    "name": "tomasvotruba/symfony-legacy-controller-autowire",
    "description": "Autowire Controllers via constructor without pain in Symfony 2.8 and 3.3",
    "require": {
        "php": "^7.1",
        "nette/robot-loader": "^3.0",
        "symfony/config": "^2.8|^3.2",
        "symfony/dependency-injection": "^2.8|^3.2",
        "symfony/http-kernel": "^2.8|^3.2",
        "symfony/yaml": "^2.8|^3.2",
        "symfony/form": "^2.8|^3.2",
        "symfony/templating": "^2.8|^3.2",
        "symfony/serializer": "^2.8|^3.2",
        "symfony/security": "^2.8|^3.2"
    },
    "require-dev": {
        "nette/utils": "^2.4",
        "nette/finder": "^2.4",
        "symfony/framework-bundle": "^2.8|^3.2",
        "phpunit/phpunit": "^6.5",
        "doctrine/annotations": "^1.4",
        "symplify/easy-coding-standard": "^10.0.11",
        "phpstan/phpstan": "^1.4",
        "twig/twig": "^2.14",
        "doctrine/common": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\SymfonyLegacyControllerAutowire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\SymfonyLegacyControllerAutowire\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
